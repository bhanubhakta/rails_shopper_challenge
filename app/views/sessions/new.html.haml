.container
  .row.vertical-offset-100
    .col-md-4.col-md-offset-4
      .panel.panel-default
        .panel-heading
          %h3.panel-title Please sign in to edit your information
        .panel-body
          = form_tag login_path do
            %fieldset
              .form-group
                %input.form-control{:name => "email", :placeholder => "E-mail", :type => "text"}/
              .form-group
                %input.form-control{:name => "phone", :placeholder => "Phone number", :value => ""}/
              .checkbox
                %label
                  %input{:name => "remember", :type => "checkbox", :value => "Remember Me"}/
                  Remember Me
              %input.btn.btn-lg.btn-success.btn-block{:type => "submit", :value => "Login"}/
